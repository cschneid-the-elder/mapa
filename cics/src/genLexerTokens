#! /usr/bin/awk -f

#generate ANTLR keywords
#input:
#SELECT
#output:
#SELECT: S E L E C T ;

{
	if (length($0) > 0) {
		split($0, chars, "")
		t = $0;
		gsub(" ", "_", t)
		if (t == "EOF") {
			printf("%s_\n\t:", t)
		} else {
			printf("%s\n\t:", t)
		}
		for (i=0; i<=length($0); i++) {
			if (chars[i] == "_") {
				printf("'_' ");
			} else if (chars[i] == " ") {
				printf("[ ]+ ");
			} else if (chars[i] ~ /[0-9]/) {
				printf("'%s' ", chars[i]);
			} else {
				printf("%s ", chars[i])
			}
		}
		printf("\n\t;\n\n");
	}
}


END {
	print "// " NR " rules generated " strftime()
}

