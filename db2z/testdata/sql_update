   UPDATE FARSCAPE.FOO
     SET PHONENO='3565'
     WHERE NB='000190';

  UPDATE FARSCAPE.FOO
    SET SALARY = SALARY + 100
    WHERE DEPT = 'D11';

   UPDATE FARSCAPE.FOO
     SET SALARY = NULL, BONUS = NULL, COMM = NULL
     WHERE NB='000250';

   UPDATE FARSCAPE.FOO
     SET (SALARY, BONUS, COMM) = (NULL, NULL, NULL)
     WHERE NB='000250';

   UPDATE FARSCAPE.FOO
     SET PROJSIZE = (SELECT COUNT(*)
                     FROM FARSCAPE.BAR
                     WHERE DEPTNO = 'E21') 
     WHERE DEPT = 'E21';               

   EXEC SQL UPDATE FARSCAPE.FOO
     SET SALARY = 3 * SALARY
     WHERE CURRENT OF C1;

   EXEC SQL UPDATE FOO2
     SET SALARY = SALARY + 2000,
         RESUME = UPDATE_RESUME(:WS_RESUME)
     WHERE EMP_ROWID = :WS_EMP_ROWID;

  EXEC SQL UPDATE FOO X
    SET SALARY = 1.10 * SALARY
    WHERE SALARY < (SELECT AVG(SALARY) FROM FOO Y
    WHERE X.JOBCODE = Y.JOBCODE);

  EXEC SQL UPDATE EMP T1
    SET SALARY = (SELECT AVG(T2.SALARY) FROM EMP T2)
    WHERE DEPT = 'E11' AND
          SALARY < (SELECT AVG(T3.SALARY) FROM EMP T3);  

  EXEC SQL 
    DECLARE C1 CURSOR FOR  
      SELECT BONUS  
      FROM FARSCAPE.STUFF 
      WHERE DEPT = 'E12'  
      FOR UPDATE OF BONUS;  
  EXEC SQL  
    UPDATE FARSCAPE.STUFF  
      SET BONUS = ( SELECT .10 * SALARY FROM FARSCAPE.STUFF Y  
                    WHERE NB = Y.NB ) 
      WHERE CURRENT OF C1;

EXEC SQL UPDATE T16 SET C1 = 5 WHERE CURRENT OF CS1; 

UPDATE POLICY
	FOR PORTION OF BUSINESS_TIME 
		FROM '2014-01-01' TO '9999-12-31'
		SET TYPE='HMO'
		WHERE BK='P138' AND CLIENT='C882';

UPDATE T16
 SET COL1 = CHARA[SI],
 COL2 = INTA[SI];

UPDATE T16
 SET COL2 = CARDINALITY(INTA);

UPDATE POLICY
FOR PORTION OF BUSINESS_TIME 
BETWEEN '2017-01-01' AND '3000-12-31'
SET TYPE='HMO'
WHERE BK='P138' AND CLIENT='C882';

UPDATE T1 MAIN
SET
    (
      MAIN.C1
    , MAIN.C2
    )
    =
    (SELECT
         TRAN.C1
       , TRAN.C2*1.3
     FROM T2 TRAN
     WHERE MAIN.C3 = TRAN.C3)
WHERE EXISTS
    (SELECT NULL
     FROM T2 TRAN
     WHERE MAIN.C3 = TRAN.C3)
;

UPDATE T1
  SET C1 = ABC.C1;

UPDATE T1
  SET C1 = SUBSTR(C2,LENGTH(C2)-1);

UPDATE TARDIS
  SET C1 = 'X'
  WHERE CURRENT OF CURSOR1
  FOR ROW 1 OF ROWSET
;

UPDATE TARDIS
  SET C1 = 'X'
  WHERE CURRENT OF CURSOR1
  FOR ROW :DOCTOR OF ROWSET
;


