
SET X = MAX(A, B, C);

SET X = MIN(:A, :B, :C);

SELECT ABS(:X) FROM SYSIBM.SYSDUMMY1;

SELECT ABSVAL(:X) FROM SYSIBM.SYSDUMMY1;

SELECT ADD_DAYS((SELECT CURRENT DATE FROM SYSIBM.SYSDUMMY1), :NB-DAYS)
FROM SYSIBM.SYSDUMMY1;

SET LEXX = GREATEST(KAI, XEV, STANLEY);

SET TWEEDLE = HASH(STANLEY, 1);

SET PRINCE = HASH_SHA1(SEVENNINETY);

SET LAIKA = HEX(PLANT);

SELECT * FROM T1 WHERE HOUR(THE_TIME) = 13;

SELECT C1, SYSIBM.IFNULL(C2,42) FROM T1;

SELECT INSERT(:SRC, 1, 2, :NEW, OCTETS) FROM SYSIBM.SYSDUMMY1;

SET :LEXX = GETVARIABLE('MEGASHADOW');

SET :LEXX = GETVARIABLE('GIGASHADOW','MANTRID');

SET :LEXX = GETVARIABLE('BRUNNEN-G',CAST (NULL AS VARCHAR(1)));

